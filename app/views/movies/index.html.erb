<center><h1>List Of All Movies</h1>

<table border="2">
  <tr>
	<th>Movie Name</th>
	<th>Release Date</th>
	<th>Description</th>
	<th colspan="3"></th>
	</tr>

	<% @movie.each do |movie| %>
	<tr>
	 <td><%= movie.name %></td>
	 <td><%= movie.release_date.strftime("%d/%m/%Y") %></td>
	 <td><%= movie.description %></td>
	 <td><%= link_to 'Show Details', movie_path(movie) %></td>
	 </tr>
	 <% end %>
	 </table><br>
	 <%= link_to 'Add a New Movie', new_movie_path %>
	 &nbsp; &nbsp;
	 <%= link_to 'Add New Actor', new_actor_path %><br><br>
	 <%= link_to 'Show All Actors', actors_path %>
	  &nbsp; &nbsp;
	 <%= link_to 'Show All Movies', movies_path %>
	 </center>