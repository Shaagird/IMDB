<center><h1>You Can Add Movies Here</h1>

<%= form_with scope: :movie, url: movies_path, local: true do |form| %>


 <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@movie.errors.count, "error") %> prohibited
        this Movie from being saved:
      </h2>
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <table>
	<tr>
			<td><%= form.label :'Movie Name' %></td>
			<td><%= form.text_field :name %></td>
	</tr>
	
  <tr>
			<td><%= form.label :'Release Date' %></td>
			<td><%= form.date_field :release_date %></td>
	</tr>

	<tr>
	<td><%= form.label :'Description' %></td>
	<td><%= form.text_field :description %></td>
	</tr>

	</table>

	<%= form.submit %>
	<%= link_to 'Show All Movies', movies_path %>
	<% end %>

</center>